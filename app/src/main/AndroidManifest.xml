<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.albertomier.mydogcollection">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyDogCollectionApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyDogCollection">
        <activity
            android:name=".ui.view.activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.activities.DogDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.activities.DogListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>